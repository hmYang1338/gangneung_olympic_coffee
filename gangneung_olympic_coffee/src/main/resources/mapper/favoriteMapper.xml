<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="favoriteMapper">
	
	<!-- @author 정태준 -->
	
	<resultMap type="favorite" id="favoriteSelectMap">
		<result column="fav_num" property="favNum"/>
		<result column="email" property="email"/>
		<result column="lan_code" property="lanCode"/>
		<result column="id" property="id"/>
		<result column="code" property="code"/>
		<result column="oz" property="oz"/>
	</resultMap>
	
	<select id="selectFavorite" resultMap="favoriteSelectMap" parameterType="int">
		SELECT fav_num, email, lan_code, id, code, oz
		FROM favorite
		WHERE lan_code = #{lanCode}
	</select>
	
	<insert id="insertFavorite" parameterType="favorite">
		INSERT INTO favorite
		VALUES(#{favNum},#{email},#{lanCode},#{id},#{code},#{oz})
	</insert>
	
	<delete id="deleteFavorite" parameterType="favorite">
		DELETE
		FROM favorite
		WHERE fav_num = #{favNum} and email = #{email} 
	</delete>
	
</mapper>	